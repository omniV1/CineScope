@inherits LayoutComponentBase
@using MudBlazor

<!-- Main layout container for the application -->
<MudLayout>
    <!-- Application header bar -->
    <MudAppBar Elevation="1" Dense="true" Class="cinescope-appbar">
        <!-- Menu toggle button for the navigation drawer -->
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />

        <!-- Application title -->
        <MudText Typo="Typo.h5" Class="ml-3">CineScope</MudText>

        <!-- Spacer to push the following elements to the right -->
        <MudSpacer />

        <!-- Search button -->
        <MudIconButton Icon="@Icons.Material.Filled.Search" Color="Color.Inherit" />

        <!-- User account button -->
        <MudIconButton Icon="@Icons.Material.Filled.AccountCircle" Color="Color.Inherit" />
    </MudAppBar>

    <!-- Navigation drawer for side menu -->
    <MudDrawer @bind-Open="_drawerOpen" Elevation="1" ClipMode="DrawerClipMode.Always">
        <!-- Drawer header -->
        <MudDrawerHeader>
            <MudText Typo="Typo.h6">CineScope</MudText>
        </MudDrawerHeader>

        <!-- Navigation menu component -->
        <NavMenu />
    </MudDrawer>

    <!-- Main content area -->
    <MudMainContent>
        <!-- Container for page content with padding -->
        <MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="pa-4">
            <!-- Render the current page content -->
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    /// <summary>
    /// Tracks whether the navigation drawer is open.
    /// </summary>
    private bool _drawerOpen = true;

    /// <summary>
    /// Toggles the navigation drawer open/closed state.
    /// </summary>
    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}