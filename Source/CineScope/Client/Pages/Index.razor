                <!-- Movie details -->
                <MudCardContent Class="pt-3 pb-3">
                    <MudText Typo="Typo.h5">@movie.Title</MudText>
                    <MudText Typo="Typo.body2">@movie.Genre | @movie.Year</MudText>
                    <MudRating ReadOnly="true" SelectedValue="@movie.Rating" />
                </MudCardContent>
                
                <!-- Card actions -->
                <MudCardActions>
                    <MudButton Variant="Variant.Text" Color="Color.Primary">Learn More</MudButton>
                    <MudButton Variant="Variant.Text" Color="Color.Secondary">Review</MudButton>
                </MudCardActions>
            </MudCard>
        </MudItem>
    }
</MudGrid>

