@inherits LayoutComponentBase

<!--
    Main layout component for the CineScope Blazor WebAssembly application
    This serves as the root layout for the entire application
-->
<div class="page">
    <!--
        Navigation menu component placed at the top of every page
        This component handles site navigation
    -->
    <NavMenu />

    <!--
        Main content area that renders the current page content
    @Body is a special RenderFragment that represents the content of the current route
    -->
    <main>
        @Body
    </main>
</div>

<style>
    /*
            CSS styles for the main layout
            These styles apply to all pages in the application
        */

    /* Full-height container with dark theme background */
    .page {
        min-height: 100vh; /* Ensures layout covers full viewport height */
        width: 100%;
        background-color: #141414; /* Dark background (Netflix-inspired) */
        color: white; /* Light text color for readability on dark background */
    }

    /*
            Main content area styling
            Added top padding to prevent content from being hidden behind the fixed navbar
        */
    main {
        padding-top: 80px; /* Creates space below the fixed navigation bar */
    }
</style>
