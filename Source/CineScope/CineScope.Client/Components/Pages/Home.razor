@page "/"
@using CineScope.Client.ClientServices
@using CineScope.Shared.Models
@inject NavigationManager NavigationManager

<div style="position: fixed; top: 0; left: 0; width: 100vw; height: 100vh; background-color: #0a0a0a; display: flex; justify-content: center; align-items: center; overflow: hidden; z-index: 0; padding-top: 80px; box-sizing: border-box;">
    <!-- Content Area -->
    <div style="position: relative; z-index: 2; width: 100%; max-width: 370px; margin: 0; padding: 2rem 1.5rem; text-align: center; background-color: rgba(17, 17, 17, 0.98); border-radius: 4px; box-shadow: 0 10px 30px rgba(0, 0, 0, 0.8), 0 0 40px rgba(229, 9, 20, 0.2);">
        <!-- Logo -->
        <div style="margin-bottom: 1.5rem; text-align: center;">
            <img src="images/cinescope-logo.png" alt="CineScope" style="max-width: 100%; max-height: 120px; margin: 0 auto; display: block; filter: drop-shadow(0 4px 8px rgba(0, 0, 0, 0.5));" />
        </div>
        
        <!-- Tagline -->
        <h1 style="font-size: 1.4rem; font-weight: 700; text-align: center; margin: 1.5rem 0; color: white; text-transform: uppercase; letter-spacing: 0.5px; line-height: 1.3; text-shadow: 0 2px 4px rgba(0, 0, 0, 0.5);">FOR MOVIE LOVERS, BY MOVIE LOVERS</h1>
        
        <!-- Action Words -->
        <div style="margin: 1.5rem 0 2rem; text-align: center;">
            <p style="font-size: 1.2rem; margin: 0.4rem 0; color: #bdbdbd; font-weight: 500; transition: all 0.2s ease;">EXPLORE.</p>
            <p style="font-size: 1.2rem; margin: 0.4rem 0; color: #bdbdbd; font-weight: 500; transition: all 0.2s ease;">CONNECT.</p>
            <p style="font-size: 1.2rem; margin: 0.4rem 0; color: #bdbdbd; font-weight: 500; transition: all 0.2s ease;">DISCOVER.</p>
        </div>
        
        <!-- Auth Buttons -->
        <div style="display: flex; flex-direction: column; gap: 0.75rem; width: 100%; margin: 2rem auto 0;">
            <a href="/login" style="display: flex; width: 100%; height: 45px; justify-content: center; align-items: center; font-size: 1.05rem; font-weight: 700; text-align: center; border-radius: 0; background-color: #E50914; color: white; text-decoration: none; text-transform: uppercase; letter-spacing: 1px; box-shadow: 0 4px 8px rgba(229, 9, 20, 0.3); transition: all 0.3s ease;">LOGIN</a>
            <a href="/register" style="display: flex; width: 100%; height: 45px; justify-content: center; align-items: center; font-size: 1.05rem; font-weight: 700; text-align: center; border-radius: 0; background-color: transparent; color: white; text-decoration: none; text-transform: uppercase; letter-spacing: 1px; border: 1px solid rgba(255, 255, 255, 0.8); box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2); transition: all 0.3s ease;">REGISTER</a>
        </div>
    </div>
</div>

<style>
    /* Full reset to prevent scrolling */
    ::deep html, ::deep body {
        margin: 0;
        padding: 0;
        overflow: hidden;
        height: 100%;
        width: 100%;
    }
</style>